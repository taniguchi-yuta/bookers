<h1>Books</h1>
<table>
	<tr>
	  <th>Title</th>
	  <th>Body</th>
	  <th></th>
	</tr>
	<tr>
	  <% @books.each do |book| %>
	    <tr>
		  <td><%= book.title %></td>
		  <td><%= book.body %></td>
		  <td><%= link_to "Show", home_path(book.id) %></td>
		  <td><%= link_to "Edit", edit_home_path(book.id) %></td>
		  <td><%= link_to "Destroy", destroy_home_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
	  <% end %>
   </tr>
</table>

<h2 class="new-book">New book</h2>
<% if @book.errors.any? %>
	<div class="alert alert-danger">
	  <ul>
	  <% @book.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	  <% end %>
	  </ul>
	</div>
<% end %>
<%= form_for(@book, url: '/homes') do |f| %>



	<p>Title</p>
	<p class="text_field"><%= f.text_field :title %></p>
	<p>Body</p>
	<%= f.text_area :body %>
	<p class="submit">
		<%= f.submit 'Create Book' %>
	</p>
<% end %>
